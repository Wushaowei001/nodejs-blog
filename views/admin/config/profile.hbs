{{> admin_nav}}
<h1>{{title}}</h1>
<form id="form" action="/admin/config/profile" method="POST">
{{#with profile}}
    <div class="form-group">
        <label for="form_author">名字：</label>
        <input  value="{{author}}"
                id="form_author" class="form-control data-upload" name="author" type="text">
        <span id="tip" style="display: none;">原始名重复</span>
        <div class="help-block">
            © 2015 名字<br>
            &lt;meta name="author" content="名字"&gt;
        </div>
    </div>
    <div class="form-group">
        <label for="form_avatar">头像：</label>
        <img src="{{avatar}}">
        {{!-- <input id="form_avatar" class="form-control data-upload" name="avatar" type="file"> --}}
    </div>
    <div class="form-group">
        <label for="form_email">邮箱：</label>
        <input  value="{{email}}"
                id="form_email" class="form-control data-upload" name="email" type="text">
    </div>
    <div class="form-group">
        <label for="form_company">公司：</label>
        <input  value="{{company}}"
                id="form_company" class="form-control data-upload" name="company" type="text">
    </div>
    <div class="form-group">
        <label for="form_location">地址：</label>
        <input  value="{{location}}"
                id="form_location" class="form-control data-upload" name="location" type="text">
    </div>
    <div class="form-group">
        <input type="hidden" name="_method" value="PUT">
        <input data-id="{{_id}}" id="submit" type="submit" value="提交">
    </div>
{{/with}}
</form>

<script src="/javascripts/jquery.js"></script>
<script>
$(function() {
    var $form = $('#form');
    var $uplaadElems = $('.data-upload');

    $('#submit').on('click', function(event) {
        event.preventDefault();
        var dataObj = {},
            dataBool = true;

        $uplaadElems.each(function(index, elem) {
            var $elem = $(elem),
                value = $elem.val();
            if (typeof value === 'string'){
                value = value.trimRight();
            }
            if (!value && !$elem.data('optional')) {
                return dataBool = false;
            }
            dataObj[$elem.attr('name')] = value;
        });
        if (!dataBool) {
            return console.log('请填写完整');
        }
        console.log(dataObj);
        $.ajax({
            url: '/admin/config/profile',
            type: 'PUT',
            dataType: 'json',
            data: dataObj
        })
        .done(function(data) {
            if (!data.state) {
                return console.log('更新失败，表单填写或许有误');
            }
            alert('更新成功');
            // window.location.reload();
        });

    });
});
</script>
